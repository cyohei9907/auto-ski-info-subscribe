# ローカル開発環境設定
# このファイルを .env にコピーして使用してください

# Django settings
SECRET_KEY=django-insecure-local-development-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database settings
# ローカル開発では SQLite を使用（設定不要）
# 本番環境（Cloud Run）では自動的に Cloud SQL に接続
USE_CLOUD_SQL=False

# Redis settings (Celery用 - ローカル開発時)
REDIS_URL=redis://localhost:6379/0

# X (Twitter) API settings
# 環境変数から取得（システムの環境変数に設定してください）
X_API_KEY=${X_API_KEY}
X_API_SECRET=${X_API_SECRET}
X_ACCESS_TOKEN=${X_ACCESS_TOKEN}
X_ACCESS_TOKEN_SECRET=${X_ACCESS_TOKEN_SECRET}
X_BEARER_TOKEN=${X_BEARER_TOKEN}

# Gemini AI settings
# 環境変数から取得（システムの環境変数に設定してください）
# ローカル: GEMINI_API_KEY
# Cloud Run: AI_API_KEY_GOOGLE (Secret Manager経由)
GEMINI_API_KEY=${GEMINI_API_KEY}

# ============================================
# 本番環境（Cloud Run）では以下の設定を使用
# ============================================
# USE_CLOUD_SQL=True
# CLOUD_DB_NAME=ski-scrapy
# CLOUD_DB_USER=postgres
# DATABASE_PASSWORD=<Secret Managerから自動取得>
# AI_API_KEY_GOOGLE=<Secret Managerから自動取得>